<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:src="@drawable/img_avartar" />-->
            <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                android:id="@+id/imv_avatar"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:layout_centerVertical="true"
                android:src="@drawable/img_avartar"
                app:c_background_color="@color/colorPrimary"
                app:c_border="true"
                app:c_border_color="#4A97E4"
                app:c_border_width="5.5dp"
                app:c_shadow="true"
                app:c_shadow_color="#000"
                app:c_shadow_gravity="end"
                app:c_shadow_radius="5.5" />
            <RelativeLayout
                android:id="@+id/it_thongtincn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imv_avatar"
                android:paddingLeft="10dp"
                >

                <LinearLayout
                    android:id="@+id/ln_tenHienThi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:paddingLeft="50dp"
                    >

                    <TextView
                        android:id="@+id/tv_tenHienThi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngô Hoàng Thiên"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/imb_setting"
                    android:layout_width="30dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginRight="50dp"
                    android:src="@drawable/ic_setting"
                    android:background="#FFFFFF"/>
            </RelativeLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_states"
                    android:clickable="true"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imvDangMon"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@drawable/post" />
                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_dish"
                        android:layout_marginLeft="50sp"
                        android:background="@drawable/button_shape"
                        android:layout_toRightOf="@+id/imvDangMon"
                        android:text="Đăng món ăn"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"
                        android:shadowColor="@color/Black"
                        android:shadowRadius="10"/>
                </RelativeLayout>
                <!--            <RelativeLayout-->
                <!--                android:id="@+id/it_nxphanhoi"-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:background="@drawable/bg_states"-->
                <!--                android:clickable="true"-->
                <!--                android:padding="10dp">-->

                <!--                <ImageView-->
                <!--                    android:id="@+id/imvNXphanhoi"-->
                <!--                    android:layout_width="30dp"-->
                <!--                    android:layout_height="50dp"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:src="@mipmap/good" />-->

                <!--                <TextView-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_centerVertical="true"-->
                <!--                    android:layout_toRightOf="@+id/imvNXphanhoi"-->
                <!--                    android:paddingLeft="50dp"-->
                <!--                    android:text="Nhận xét và phản hồi"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="16dp" />-->
                <!--            </RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/it_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_states"
                    android:clickable="true"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imvDangXuat"
                        android:layout_width="30dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_exit" />

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40sp"
                        android:id="@+id/txtdx"
                        android:layout_marginLeft="50sp"
                        android:background="@drawable/bg_init_command"
                        android:layout_toRightOf="@+id/imvDangXuat"
                        android:text="       Đăng xuất"
                        android:textSize="24sp"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"
                        android:shadowColor="@color/Black"
                        android:shadowRadius="10"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>